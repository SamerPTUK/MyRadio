<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samer.myradio.activities.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playerLinear"
        android:background="@color/top_bg">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/playerLinear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:background="@color/bottom_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/tunes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Time To Rock (Every Day)"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingLeft="5dp"
                android:text="The Rock Tunes Funny Time Family Brand"
                android:textColor="@color/sub_title"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/bottom_bg"
            android:forceHasOverlappingRendering="false"
            android:scaleType="centerInside"
            android:tag="10"
            app:srcCompat="@drawable/playbutton" />
    </LinearLayout>

</RelativeLayout>
