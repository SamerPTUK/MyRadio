<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/bottom_bg">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_corner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            app:srcCompat="@drawable/flightplanmusic" />

        <TextView
            android:id="@+id/text_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:lines="2"
            android:text="Flight Plan (Tunes for Travel)"
            android:textColor="@color/card_title"
            android:textSize="13dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
